@model HospitalApplication.Models.RoomDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<div class="deleteConfirm">

    <h2 class="deleteTitle">Confirm Deletion</h2>

    <h2><strong>Are you sure you want to delete the following room?</strong></h2>
    <h3>Room @Model.RoomNumber?</h3>

    <form action="/Room/Delete/@Model.RoomId" method="POST" class="delete">
        <input type="submit" style="background-color:red;" value="Confirm Delete" />
    </form>

</div>

<div>
    <a href="/Room/Details/@Model.RoomId"> Cancel - Return to Room</a>
</div>
