@model HospitalApplication.Models.ProcedureDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<div class="deleteConfirm">

    <h2 class="deleteTitle">Confirm Deletion</h2>

    <h2><strong>Are you sure you want to delete the following procedure?</strong></h2>
    <h3>@Model.ProcedureName on @Model.Date</h3>

    <form action="/Procedure/Delete/@Model.ProcedureId" method="POST" class="delete">
        <input type="submit" style="background-color:red;" value="Confirm Delete" />
    </form>

</div>

<div>
    <a href="/Procedure/Details/@Model.ProcedureId"> Cancel - Return to Procedure</a>
</div>