
@{
    ViewBag.Title = "New";
}


<h2>Add a New Patient</h2>

<a href="/Patient/List">Return to Patient List</a>

<form action="/Patient/Create" method="POST">
    <div>
        <label>First Name:</label>
        <input type="text" name="PatientFirstName" />
    </div>
    <div>
        <label>Last Name:</label>
        <input type="text" name="PatientLastName" />
    </div>
    <div>
        <label>Phone Number:</label>
        <input type="text" name="PatientPhone" />
    </div>
    <div>
        <label>Email:</label>
        <input type="text" name="PatientEmail" />
    </div>
    <div class="submit-container">
        <input type="submit" value="Add Patient" />
    </div>

</form>

