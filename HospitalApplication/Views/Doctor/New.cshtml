
@{
    ViewBag.Title = "New";
}

<h2>Add a New Doctor</h2>

<a href="/Doctor/List">Return to Doctor List</a>

<form action="/Doctor/Create" method="POST">

    <div>
        <label>First Name: </label>
        <input type="text" name="DoctorFirstName" />
    </div>

    <div>
        <label>Last Name: </label>
        <input type="text" name="DoctorLastName" />
    </div>

    <div>
        <label>Staff Number: </label>
        <input type="number" name="StaffNumber" />
    </div>

    <div>
        <label>Department: </label>
        <input type="text" name="Department" />
    </div>

    <div>
        <label>Phone Number: </label>
        <input type="tel" name="DoctorPhone" />
    </div>

    <div>
        <label>Email Address: </label>
        <input type="email" name="DoctorEmail" />
    </div>

    <div class="submit-container">
        <input type="submit" value="Add Doctor" />
    </div>

</form>